                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource gradientBrushStopButtonMouseClick}" />
                                <Setter Property="Foreground" Value="White" />
