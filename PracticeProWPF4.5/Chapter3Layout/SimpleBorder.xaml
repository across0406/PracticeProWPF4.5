<Window x:Class="Chapter3Layout.SimpleBorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter3Layout"
        mc:Ignorable="d"
        Title="SimpleBorder" Height="450" Width="800">
    <Grid Background="Black" >
        <Border Margin="5" Padding="5" Background="Gray" 
                BorderBrush="LightGray" BorderThickness="2" 
                CornerRadius="3" VerticalAlignment="Top" >
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Stretch" >
                <Button Margin="5" Content="One" MinWidth="50" />
                <Button Margin="5" Content="Two" MinWidth="50" />
                <Button Margin="5" Content="Three" MinWidth="50" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
